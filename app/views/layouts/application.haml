!!!
/[if lt IE 7] <html lang="en" class="ie6">
/[if IE 7] <html lang="en" class="ie7">
/[if IE 8] <html lang="en" class="ie8">
/[if IE 9] <html lang="en" class="ie9">
/[if gt IE 9] <html lang="en">
/ [if !IE]>
%html{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}
      %title= yield :title
      /[if lt IE 9]
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
      = stylesheet_link_tag    "application", :media => "all"
      = javascript_include_tag "application"
      = csrf_meta_tags
      / touch icons
      %link{:href => "apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}
      %link{:href => "apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}
      %link{:href => "apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          - if user_signed_in?
            .connectionBox
              %a.ntfication{:href => "#", :rel => "tooltip", :title => "Notifications"}  
              %a.conection{:href => "#", :rel => "tooltip", :title => "Connection Requests"}  
              .ntficationBox
                %h4 Notifications
              .RqstBox
                %h4 Connection Requests
                - current_user.pending_invited_by.each do |friend|
                  .reqst-rw.clearfix
                    = link_to friend, class: "imageholder" do
                      = image_tag friend.thumb_image("square"), size: "31x31"
                    %h5= friend.url.titleize
                    = link_to "ACCEPT", [friend, current_user.friendship_with(friend)], method: :put, remote: true, class: "btn"
                    = link_to "DECLINE", [friend, current_user.friendship_with(friend)], method: :delete, remote: true, class: "btn"
                %span.see-all
                  = link_to "See all Connection Request", user_friendships_path(current_user)
          .logo
            %a{:href => "http://socialdex.co"} Socialdex

          - if user_signed_in? and current_user.completed?
            .navCardStack
              .miniSocialdex
                = link_to "", root_path, rel: "tooltip", title: "Main Socialdex", class: "caltip2"
              .mycard
                %a.caltip{:href => "#", :rel => "tooltip", :title => "My Card"}
          - if user_signed_in?
            #loginContainer
              = link_to current_user, class: "userAcc" do
                = image_tag current_user.thumb_image("square"), size: "31x31"
              %a#drp-arrow{:href => "#"}
                %span
              #dropdown
                %ul
                  %li
                    %a{:href => "#"} Premium Cards
                  %li.divider
                  %li
                    %a{:href => "#"} Settings
                  %li
                    %a{:href => "#"} Help
                  %li
                    %a{:href => "#"} About
                  %li
                    %a{:href => "#"} Blog
                  %li
                    %a{:href => "#"} Terms of Service
                  %li
                    %a{:href => "#"} Privacy Policy
                  %li.divider
                  %li
                    = link_to "Sign Out", destroy_user_session_path, method: :delete
    = yield
